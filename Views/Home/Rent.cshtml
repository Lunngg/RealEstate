@model MyViewModel

<!--/ Intro Single start /-->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Our Amazing Rental deals</h1>
                    <span class="color-text-a">Grid Deal</span>
                </div>
            </div>

            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            Rent
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!--/ Intro Single End /-->
<!--/ Property Grid Star /-->
<section class="property-grid grid">

    <div class="container">
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <!-- Drop-down sort list-->
                <!-- <div class="col-sm-12">
                <div class="grid-option">
                <form>
                <select class="custom-select">
                <option selected>All</option>
                <option value="1">New to Old</option>
                <option value="2">For Rent</option>
                <option value="3">For Sale</option>
                </select>
                </form>
                </div>
                </div>-->

                @foreach (var prop in category.Properties)
                {
                    @if (prop.CategoryId == 4)
                    {
                        <div class="col-md-4">
                            <div class="card-box-a card-shadow">

                                <div class="img-box-a">
                                    <img src="~/img/property-1.jpg" alt="" class="img-a img-fluid">
                                </div>


                                <div class="card-overlay">
                                    <div class="card-overlay-a-content">

                                        <div class="card-header-a">
                                            <h2 class="card-title-a">
                                                <a>
                                                    @prop.Name
                                                </a>
                                            </h2>
                                        </div>

                                        <div class="card-body-a">

                                            <div class="price-box d-flex">
                                                <span class="price-a">@prop.Price</span>
                                            </div>

                                            <a asp-area="" asp-controller="Home" asp-action="ProjectDetail" asp-route-id="@prop.Id">
                                                Click here to view
                                                <span class="ion-ios-arrow-forward"></span>
                                            </a>

                                        </div>
                                        <div class="card-footer-a">
                                            <ul class="card-info d-flex justify-content-around">
                                                <li>
                                                    <h4 class="card-info-title">Area</h4>
                                                    <span>
                                                        <sup>@prop.DienTich</sup>
                                                    </span>
                                                </li>

                                                <!-- Location -->
                                                <li>
                                                    <span>
                                                        <h4 class="card-info-title">Location</h4>

                                                        @foreach (var location in Model.Locations)
                                                        {
                                                            @if (prop.CategoryId == 4 && prop.LocationId == location.Id)
                                                            {

                                                                <sup>@location.Name</sup>

                                                            }
                                                        }
                                                    </span>
                                                </li>

                                                <li>
                                                    <h4 class="card-info-title">Type</h4>
                                                    <span>
                                                        <sup> @category.Name</sup>
                                                    </span>
                                                </li>

                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>

