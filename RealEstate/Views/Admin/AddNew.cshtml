@{
    Layout = "~/Views/shared/_layout_admin.cshtml";
    ViewBag.title = "AddNew";
    ViewBag.active = 4;
}
<!-- PAGE CONTAINER-->
<div class="page-container">
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                    </div>
                </div>
                <div class="row m-t-25">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="page-titles">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Admin" asp-action="New">New</a></li>
                                        <li class="breadcrumb-item active">
                                            <a asp-area="" asp-controller="Admin" asp-action="AddNew">Add New</a>
                                        </li>
                                    </ol>
                                </div>
                            </div>
                            <div class="card-body card-block">
                                <form action="~/AdminController/AddProperty" method="post" enctype="multipart/form-data"
                                      class="form-horizontal">
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">
                                                New Title :
                                            </label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="text-input"
                                                   placeholder="Your title..." class="form-control">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="textarea-input" class=" form-control-label">
                                                Description
                                                :
                                            </label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <textarea name="textarea-input" id="textarea-input" rows="9"
                                                      placeholder="Content..." class="form-control"></textarea>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="select" class=" form-control-label">
                                                New Category :
                                            </label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <select name="category" id="category" class="form-control" multiple">
                                                <option value="1">Apartment</option>
                                                <option value="2">House</option>
                                                <option value="3">Style</option>
                                                <option value="4">Rent</option>
                                                <option value="5">Sell</option>
                                                <option value="6">Buy</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="file-input" class=" form-control-label">
                                                Image
                                                input :
                                            </label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="file" id="file-input" name="file-input"
                                                   class="form-control-file">
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer">
                                <button type="submit" onclick="window.location.href='Property'"
                                        class="btn au-btn--green btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Confirm
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    Copyright © 2023. All rights reserved. Team <a asp-area="" asp-controller="Admin" asp-action="index">LPH</a> with love
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
