@model RealEstate.Models.Seller
@{
    Layout = "~/Views/shared/_layout_admin.cshtml";
    ViewBag.title = "AgentDetail";
    ViewBag.active = 3;
}

<!-- PAGE CONTAINER-->
<div class="page-container">
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <!-- Latest Properties -->
                <div class="col-lg-12 ">
                    <div class="card">
                        <div class="card-header-prop">
                            <div class="page-titles">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a asp-area="" asp-controller="Admin" asp-action="Agent">
                                            Agent
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        <a asp-area="" asp-controller="Admin" asp-action="EditAgent">
                                            EditAgent
                                        </a>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 float-left">
                        <div class="card">
                            <div class="card-header">
                                <strong>Edit Agent</strong> Avatar
                            </div>
                            <div class="card-body">
                                <div class="mx-auto d-block" style="width: 84%">
                                    <img class="rounded-circle mx-auto d-block" src="/img/agent-1.jpg"
                                         alt="Card image cap">
                                    <h5 class="text-sm-center mt-2 mb-1">@Model.Name</h5>
                                    <div class="location text-sm-center">
                                        <i class="fa fa-map-marker"></i> @Model.Address
                                    </div>
                                </div>
                                <hr>
                                <div class="card-text text-sm-center">
                                    <a href="#">
                                        <i class="fab fa-facebook pr-1"></i>
                                    </a>
                                    <a href="#">
                                        <i class="fab fa-twitter pr-1"></i>
                                    </a>
                                    <a href="#">
                                        <i class="fab fa-google-plus pr-1"></i>
                                    </a>
                                    <a href="#">
                                        <i class="fas fa-share pr-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8 float-right">
                        <div class="card">
                            <div class="card-header">
                                <strong>Edit Agent</strong> Information
                            </div>
                            <div class="card-body card-block">
                                <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Agent Name:</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <p class="form-control-static">@Model.Name</p>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">Change Name:</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="text-input" placeholder="Name.." class="form-control">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="email-input" class=" form-control-label">Change Email</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="email" id="email-input" name="email-input" placeholder="Current Email: @Model.Email" class="form-control">
                                            <small class="help-block form-text">Please enter your email</small>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="password-input" class=" form-control-label">Change Password:</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="password" id="password-input" name="password-input" placeholder="Password" class="form-control">
                                            <small class="help-block form-text">Please enter a complex password</small>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="file-input" class=" form-control-label">Change Avatar</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="file" id="file-input" name="file-input" class="form-control-file">
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer" style="padding-top: 18px">
                                <button type="submit" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                                <button type="reset" class="au-btn au-btn-icon au-btn--red au-btn--small">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

