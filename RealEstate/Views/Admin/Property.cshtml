@model RealEstate.Models.Admin_Models.AdminModel

@{
    Layout = "~/Views/shared/_layout_admin.cshtml";
    ViewBag.title = "Property";
    ViewBag.active = 2;
}
<!-- PAGE CONTAINER-->
<div class="page-container">
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <section class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- PROPERTY -->
                            <div class="card" style="padding-bottom: 30px;">
                                <div class="card-header" style="margin-bottom: 2%; min-height: 60px;">
                                    <strong class="card-title mb-3">Property List</strong>
                                    <div class="table-data__tool-right">
                                        <input type=button onClick="window.location.href='AddProperty'"
                                               value='+ Add Property'
                                               class="au-btn au-btn-icon au-btn--green au-btn--small">
                                        </input>
                                    </div>
                                </div>
                                <table class="mdl-data-table" id="table-property" style="width:95%">
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Name</th>
                                            <th>Short Description</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Price</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var (obj, abs) in Model.MyPost.Zip(Model.MyProp, (obj, abs) => (obj, abs)))
                                        {
                                            <tr>
                                                <td style="width: 12%">
                                                    <ul class="list-inline">
                                                        <li class="list-inline-item">
                                                            <img alt="PropertyImage" class="table-avatar"
                                                                 src="~/images/bg-title-01.jpg" style="border-radius: 20%">
                                                        </li>
                                                    </ul>
                                                </td>
                                                <td>
                                                    @obj.RealEstate.Name
                                                </td>
                                                <td>
                                                    <span class="desc">@obj.ShortDescription</span>
                                                </td>
                                                <td>@obj.PublicDate</td>
                                                <td>
                                                    <div class="rs-select2--trans rs-select2--sm">
                                                        <select class="js-select2" name="property">
                                                            <option value="">Published</option>
                                                            <option value="">Not Published</option>
                                                        </select>
                                                        <div class="dropDownSelect2"></div>
                                                    </div>
                                                </td>
                                                <td>@obj.Low - @obj.High</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Detail">
                                                            <a asp-area="" asp-controller="Admin" asp-action="PropertyDetail">
                                                                <i class="zmdi zmdi-folder"></i>
                                                            </a>
                                                        </button>
                                                        <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Edit">
                                                            <a asp-area="" asp-controller="Admin" asp-action="EditProperty">
                                                                <i class="zmdi zmdi-edit">
                                                                </i>
                                                            </a>
                                                        </button>
                                                        <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Delete">
                                                            <i class="zmdi zmdi-delete"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- END  DATA-->
                    </div>
                    <!-- Footer  -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p>
                                    Copyright Â© 2023. All rights reserved. Team <a href="#">LPH</a> with love
                                </p>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
