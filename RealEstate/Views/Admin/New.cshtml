@model List<RealEstate.Models.News>

@{
    Layout = "~/Views/shared/_layout_admin.cshtml";
    ViewBag.title = "New";
    ViewBag.active = 4;
}
<!-- PAGE CONTAINER-->
<div class="page-container">
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <section class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- PROPERTY -->
                            <div class="card" style="padding-bottom: 30px;">
                                <div class="card-header" style="margin-bottom: 2%; min-height: 60px;">
                                    <strong class="card-title mb-3">News List</strong>
                                </div>
                                <table class="mdl-data-table" id="table-page" style="width:95%">
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var obj in Model)
                                        {
                                            string imgURL = @obj.Images.ToList()[0].Image1;
                                            <tr>
                                                <td>
                                                    <ul class="list-inline">
                                                        <li class="list-inline-item">
                                                            <img alt="PropertyImage" class="table-avatar"
                                                                 src="~/img/@imgURL" style="border-radius: 10%">
                                                        </li>
                                                    </ul>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        <h6>@obj.Title</h6>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="desc">@obj.Contents</span>
                                                </td>
                                                <td>@obj.Date</td>
                                                <td>
                                                    <div class="rs-select2--trans rs-select2--sm">
                                                        <select class="js-select2" name="property">
                                                            <option value="">Published</option>
                                                            <option value="">Not Published</option>
                                                        </select>
                                                        <div class="dropDownSelect2"></div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Detail">
                                                            <a asp-area="" asp-controller="Admin" asp-action="NewDetail" asp-route-id="@obj.Id">
                                                                <i class="zmdi zmdi-folder"></i>
                                                            </a>
                                                        </button>
                                                        <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Edit">
                                                            <a asp-area="" asp-controller="Admin" asp-action="EditNew" asp-route-id="@obj.Id">
                                                                <i class="zmdi zmdi-edit">
                                                                </i>
                                                            </a>
                                                        </button>
                                                        <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Delete">
                                                            <i class="zmdi zmdi-delete"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- END  DATA-->
                    </div>
                    <!-- Footer  -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p>
                                    Copyright Â© 2023. All rights reserved. Team <a href="#">LPH</a> with love
                                </p>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
